<div class="form-group">
   <div class="col-md-4">
      <div class="form-group">
          <label>Hours</label>
          <input type="number" class="form-control" placeholder="Hours ...." @bind="Hours" />
      </div>
       <button class="btn btn-primary" @onclick="ConvertTime">
           <span class="oi oi-clock" aria-hidden="true"></span> Convert
       </button>
      </div>

        @if (_seconds != null)
        {
            <div class="row blockquote mt-5">
                <span>In @Hours hour we have @_seconds second !</span>
            </div>
        }

</div>


    @code {
        int? _seconds = null;

        public int? Hours { get; set; }

        private void ConvertTime()
        {
            _seconds = Hours * 3600;
        }

    }

